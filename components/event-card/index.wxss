.event-card {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.event-card__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.event-card__title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.event-card__status {
  padding: 4rpx 12rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
}

.status--ongoing {
  color: #07C160;
  background: rgba(7, 193, 96, 0.1);
}

.status--ended {
  color: #999;
  background: #f5f5f5;
}

.event-card__content {
  margin-bottom: 20rpx;
}

.event-card__desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.event-card__footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.event-card__info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.event-card__time,
.event-card__count {
  font-size: 24rpx;
  color: #999;
}

.event-card__tags {
  display: flex;
  gap: 8rpx;
}

.event-card__tag {
  padding: 4rpx 12rpx;
  font-size: 24rpx;
  color: #07C160;
  background: rgba(7, 193, 96, 0.1);
  border-radius: 8rpx;
} 