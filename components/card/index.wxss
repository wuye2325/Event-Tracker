.card {
  margin: 20rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-color, #333);
}

.card-extra {
  font-size: 28rpx;
  color: var(--text-color-light, #999);
}

.card-body {
  margin-bottom: 16rpx;
}

.card-thumb {
  width: 100%;
  height: 320rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-color-light, #999);
}

.card-status {
  display: flex;
  align-items: center;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.status-active {
  background-color: var(--primary-color, #07C160);
}

.status-ended {
  background-color: #999;
}

.card-time {
  font-size: 24rpx;
  color: var(--text-color-light, #999);
} 