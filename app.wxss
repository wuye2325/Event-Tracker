/* 全局样式变量 */
:root {
  --primary-color: #07C160;
  --primary-light: #f0f9f0;
  --text-color: #333333;
  --text-color-light: #999999;
  --border-color: #eeeeee;
  --bg-color: #f7f7f7;
}

/* 常用样式类 */
.container {
  min-height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
}

.content {
  flex: 1;
  padding: 30rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  background: var(--primary-light);
  color: var(--primary-color);
  margin-right: 16rpx;
}

.btn {
  padding: 20rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
}

.btn-primary {
  background: var(--primary-color);
  color: #fff;
}

.btn-outline {
  border: 2rpx solid var(--primary-color);
  color: var(--primary-color);
  background: #fff;
}

.fab {
  position: fixed;
  right: 32rpx;
  bottom: 32rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: var(--primary-color);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.15);
}

.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.divider {
  height: 2rpx;
  background: var(--border-color);
  margin: 24rpx 0;
}

.safe-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.safe-top {
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

.vote-progress {
  background: var(--border-color);
  border-radius: 16rpx;
  height: 32rpx;
  overflow: hidden;
}

.vote-bar {
  height: 100%;
  background: var(--primary-color);
  transition: width 0.3s ease;
}