page {
  background-color: #f7f7f7;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx 30rpx;
  background: #f7f7f7;
}

.search-input-wrap {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  margin-left: 16rpx;
  color: #333;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  background: #fff;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.filter-tab {
  position: relative;
  padding: 20rpx 32rpx;
  font-size: 28rpx;
  color: #666;
}

.filter-tab.active {
  color: #07C160;
  font-weight: 500;
}

.filter-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #07C160;
  border-radius: 2rpx;
}

/* 事件列表 */
.event-list {
  padding: 0 30rpx;
}

.event-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.event-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.event-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-right: 16rpx;
}

.event-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
}

.event-status.ongoing {
  background: #E8F5E9;
  color: #07C160;
}

.event-status.ended {
  background: #F5F5F5;
  color: #999;
}

.event-info {
  display: flex;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-right: 32rpx;
}

.info-item .iconfont {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.event-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 24rpx;
  color: #666;
  background: #F5F5F5;
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
}

/* 删除悬浮按钮相关样式 */
/* .fab 和 .fab-icon 样式已移除 */

/* 空状态 */
.empty {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 28rpx;
}