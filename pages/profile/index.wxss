.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 用户信息卡片 */
.user-card {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 24rpx;
  border: 2rpx solid #f0f0f0;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.community {
  font-size: 28rpx;
  color: #666;
}

.edit-btn {
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
}

.edit-text {
  font-size: 24rpx;
  color: #666;
}

.login-btn {
  margin-top: 24rpx;
  background: #07C160 !important;
  color: #fff !important;
  font-weight: normal !important;
  border-radius: 40rpx;
}

/* 分区标题 */
.section-title {
  font-size: 28rpx;
  color: #999;
  padding: 30rpx 32rpx 10rpx;
  font-weight: 500;
}

/* 功能列表 */
.menu-list {
  background: #fff;
  border-radius: 12rpx;
  margin: 0 16rpx 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.menu-text {
  font-size: 32rpx;
  color: #333;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

/* 退出登录按钮 */
.logout-section {
  padding: 40rpx 32rpx;
}

.logout-btn {
  background: #fff !important;
  color: #ff4d4f !important;
  font-weight: normal !important;
  border-radius: 40rpx;
  border: 1rpx solid #ff4d4f;
}