/* pages/event-relation/index.wxss */

/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f7fa;
}

/* 导航栏样式 */
.nav-bar {
  display: flex;
  align-items: center;
  height: 44px;
  padding: 0 15px;
  background-color: #ffffff;
  border-bottom: 1px solid #e8e8e8;
  position: relative;
  z-index: 10;
}

.nav-back {
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 16px;
  font-weight: 500;
  color: #333333;
}

.nav-actions {
  display: flex;
  align-items: center;
}

.nav-action {
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 8px;
}

/* 内容区样式 */
.content {
  flex: 1;
  position: relative;
  overflow: hidden;
}

.relation-chart {
  width: 100%;
  height: 100%;
  background-color: #f5f7fa;
}

.loading-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.8);
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid #e8e8e8;
  border-top: 3px solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 12px;
  font-size: 14px;
  color: #666666;
}

.tips {
  position: absolute;
  bottom: 16px;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 12px;
  color: #999999;
  padding: 8px;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 4px;
  margin: 0 16px;
}

/* 控制栏样式 */
.control-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 50px;
  padding: 0 15px;
  background-color: #ffffff;
  border-top: 1px solid #e8e8e8;
}

.event-info {
  display: flex;
  flex-direction: column;
}

.event-title {
  font-size: 14px;
  font-weight: 500;
  color: #333333;
  max-width: 200px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.event-status {
  font-size: 12px;
  color: #999999;
  margin-top: 2px;
}

.zoom-controls {
  display: flex;
  align-items: center;
}

.zoom-btn {
  width: 30px;
  height: 30px;
  border-radius: 15px;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  font-weight: bold;
  color: #333333;
  margin: 0 4px;
}

.zoom-btn:active {
  background-color: #e0e0e0;
}

.header {
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.relation-container {
  position: relative;
  width: 100%;
  height: 60vh;
  background-color: #ffffff;
  overflow: hidden;
}

.loading-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07C160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

.empty-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-top: 20rpx;
}

.event-detail-card {
  margin: 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
}

.card-status {
  font-size: 24rpx;
  color: #ffffff;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
}

.card-content {
  padding: 20rpx;
}

.card-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.card-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999999;
}

.card-stats {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666666;
}

.card-footer {
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: flex-end;
}

.btn-detail {
  font-size: 28rpx;
  color: #ffffff;
  background-color: #07C160;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  line-height: 1.5;
}

.action-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.btn-action {
  font-size: 28rpx;
  color: #07C160;
  background-color: #f0f0f0;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  line-height: 1.5;
  margin: 0;
}

.legend-container {
  margin: 20rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.legend-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.legend-color {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.legend-text {
  font-size: 26rpx;
  color: #666666;
}