/* pages/comments/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 原帖卡片样式 */
.post-card {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.avatar-small {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.post-info {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  display: block;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
  display: block;
}

.post-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.post-images {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.post-images image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
}

/* 评论区样式 */
.comments-section {
  background: #fff;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.comment-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.comment-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.comment-main {
  display: flex;
  gap: 20rpx;
}

.comment-content {
  flex: 1;
}

.comment-header {
  margin-bottom: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comment-actions {
  display: flex;
  gap: 32rpx;
  margin-top: 16rpx;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
}

.action-count, .action-text {
  font-size: 24rpx;
  color: #666;
}

/* 回复列表样式 */
.reply-list {
  margin-left: 100rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
}

.reply-item {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.reply-item:last-child {
  margin-bottom: 0;
}

.reply-content {
  flex: 1;
}

.reply-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.empty-state {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
}

/* 评论输入框 */
.comment-input {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.input {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.send-btn {
  width: 120rpx;
  height: 72rpx;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
  padding: 0;
  line-height: 72rpx;
}

.send-btn[disabled] {
  background: #ccc;
  color: #fff;
} 