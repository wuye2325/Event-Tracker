.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 事件卡片样式 */
.event-card {
  background: #fff;
  padding: 32rpx;
  margin: 24rpx 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.event-header {
  width: 100%;
}

.header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.event-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.event-status {
  padding: 4rpx 16rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  margin-left: 16rpx;
}

.status-active {
  background: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.status-ended {
  background: rgba(0, 0, 0, 0.05);
  color: #999;
}

.event-meta {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.event-time {
  font-size: 24rpx;
  color: #999;
}

.comment-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 24rpx;
}

.event-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.event-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tag {
  background: #f5f5f5;
  color: #666;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.event-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 24rpx;
}

.action-button {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  font-size: 24rpx;
  color: #666;
}

.action-icon {
  margin-right: 8rpx;
}

/* 时间线样式 */
.timeline {
  margin-top: 20rpx;
  background: #fff;
  padding: 30rpx;
}

.timeline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.timeline-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.timeline-count {
  font-size: 24rpx;
  color: #999;
}

.timeline-list {
  position: relative;
}

.timeline-item {
  position: relative;
  padding-left: 30rpx;
  margin-bottom: 40rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: 0;
  top: 40rpx;
  width: 12rpx;
  height: 12rpx;
  background: #07c160;
  border-radius: 50%;
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: 5rpx;
  top: 40rpx;
  bottom: -40rpx;
  width: 2rpx;
  background: #eee;
}

.timeline-item:last-child::before {
  display: none;
}

.timeline-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.timeline-card {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
}

.timeline-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.timeline-info {
  flex: 1;
}

.nickname {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.timeline-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.timeline-images {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.timeline-images image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
}

.timeline-actions {
  display: flex;
  justify-content: flex-end;
  gap: 32rpx;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
}

.action-count {
  font-size: 24rpx;
  color: #666;
}

/* 加载中 */
.loading {
  text-align: center;
  padding: 32rpx;
  color: #999;
}